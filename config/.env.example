# AI Invoice Generator Environment Variables Example
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
BASE_URL=http://localhost:3000

# Email Configuration (Optional - for sending invoices)
FEATURE_EMAIL_NOTIFICATIONS=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your.email@gmail.com
SMTP_PASS=your-gmail-app-password

# Payment Configuration (Optional - for production)
FEATURE_PAYMENT_GATEWAY=true
MOCK_PAYMENTS=true
MIDTRANS_SERVER_KEY=SB-Mid-server-your-key-here
MIDTRANS_CLIENT_KEY=SB-Mid-client-your-key-here
MIDTRANS_ENVIRONMENT=sandbox

# Feature Flags
FEATURE_WHATSAPP_INTEGRATION=true
FEATURE_PDF_GENERATION=true
FEATURE_ANALYTICS=true
FEATURE_MULTI_CURRENCY=false

# Security Configuration
JWT_SECRET=your-secure-jwt-secret-at-least-32-chars
SESSION_SECRET=your-secure-session-secret-at-least-32-chars
CORS_ORIGIN=*
ENABLE_CORS=true

# Database Configuration
DB_TYPE=json
DB_JSON_PATH=./database.json
DB_BACKUP_ENABLED=false

# Merchant Default Information
MERCHANT_NAME=Your Business Name
MERCHANT_ADDRESS=Your Business Address
MERCHANT_PHONE=Your Business Phone
MERCHANT_EMAIL=billing@yourbusiness.com
MERCHANT_WEBSITE=https://yourbusiness.com
MERCHANT_TAX_ID=Your-Tax-ID

# Cloudinary Configuration (for business logo uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Development Configuration
DEBUG_MODE=true
LOG_LEVEL=info