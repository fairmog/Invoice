# AI Invoice Generator Railway Production Environment
# Copy these environment variables to Railway dashboard

# ===========================================
# BASIC CONFIGURATION
# ===========================================
NODE_ENV=production
HOST=0.0.0.0
# PORT is automatically set by Railway
# BASE_URL will be https://your-app.railway.app (update after deployment)

# ===========================================
# AI CONFIGURATION (REQUIRED)
# ===========================================
# Replace with your actual OpenAI API key in Railway dashboard
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ===========================================
# EMAIL CONFIGURATION (REQUIRED)
# ===========================================
FEATURE_EMAIL_NOTIFICATIONS=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
# Replace with your actual Gmail credentials
SMTP_USER=aspree.id@gmail.com
SMTP_PASS=your_gmail_app_password_here

# ===========================================
# SECURITY CONFIGURATION (REQUIRED)
# ===========================================
# Generate a strong JWT secret for production
JWT_SECRET=bevelient_production_jwt_secret_2024_change_this_to_random_string
SESSION_SECRET=bevelient_production_session_secret_2024_change_this_to_random_string

# ===========================================
# PAYMENT GATEWAY CONFIGURATION
# ===========================================
FEATURE_PAYMENT_GATEWAY=true
# Replace with your Xendit/Midtrans production keys if needed
MIDTRANS_ENVIRONMENT=sandbox

# ===========================================
# RAILWAY SPECIFIC SETTINGS
# ===========================================
# Railway provides HTTPS automatically, so disable SSL setup
SSL_ENABLED=false

# Enable CORS for Railway domain
ENABLE_CORS=true
# CORS_ORIGIN will be set to your Railway domain after deployment

# ===========================================
# FEATURE FLAGS
# ===========================================
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_PAYMENT_GATEWAY=true
FEATURE_WHATSAPP_INTEGRATION=true
FEATURE_PDF_GENERATION=true
FEATURE_ANALYTICS=true

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# DATABASE & LOGGING
# ===========================================
DB_TYPE=json
DB_JSON_PATH=./database.json
LOG_LEVEL=info